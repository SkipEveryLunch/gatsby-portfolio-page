import { useEffect, useState } from "react"

const useWidth = () => {
  const [width, setWidth] = useState(window.innerWidth)
  const updateWidth = event => {
    setWidth(window.innerWidth)
  }
  useEffect(() => {
    window.addEventListener(`resize`, updateWidth, {
      capture: false,
      passive: true,
    })
  }, [])
  return width
}
export default useWidth
